generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
  TEACHER
}

model Profile {
  id          String      @id @db.Uuid
  role        Role        @default(STUDENT)
  courses     Course[]    

  @@map("profile")
}

model Course {
  id          String      @id @default(uuid()) @db.Uuid
  title       String
  students    Profile[]   

  @@map("course")
}